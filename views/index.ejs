<%- include("partials/header.ejs") %>

<div class="heading">
    <h1>Track your days....</h1>
    <a href="/newBlog" class="btn btn-outline-success"> Create </a>
</div>

<h2 class="blog-type"> <%= typeOfBlogs %> </h2>

<div class="container blog-container-flexbox">
    <% blogs.forEach(blog => { %>
        <div class="container blog-container-flexbox-items" id="<%= blog._id %>">
            <h3><%= blog.title %></h3>
            <p><%= blog.content %></p>
        </div>
    <%}); %>
</div>


